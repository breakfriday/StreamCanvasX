{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./dist/types",  // 指定声明文件输出目录
    "emitDeclarationOnly": true,       // 只生成声明文件，不生成 .js
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "typeRoots": [ "./node_modules/@types","./node_modules/@webgpu/types","./src/types"],
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "paths": {
      "@types/*": ["src/types/*"],
      "@service/*": ["src/service/*"]
    }
  },
  "include": ["src"],
}
