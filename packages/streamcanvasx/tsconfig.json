{
  "compilerOptions": {
    "emitDecoratorMetadata":true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "typeRoots": [  "./node_modules/@types"],
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "importHelpers": true,
  },
  "include": ["src"],
}
